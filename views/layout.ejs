    <script>
        // Prevent manual navigation/redirection attempts
        // Only allow Linkvertise redirects
        let allowedRedirect = false;
        
        // Override window.location methods to prevent unauthorized redirects
        const originalAssign = window.location.assign;
        const originalReplace = window.location.replace;
        
        window.location.assign = function(url) {
            if (allowedRedirect) {
                originalAssign.call(this, url);
            } else {
                console.warn('Unauthorized redirect attempt blocked');
            }
        };
        
        window.location.replace = function(url) {
            if (allowedRedirect) {
                originalReplace.call(this, url);
            } else {
                console.warn('Unauthorized redirect attempt blocked');
            }
        };
        
        // Linkvertise integration will set allowedRedirect to true
        window.addEventListener('beforeunload', function() {
            allowedRedirect = true;
        });
        
        // Auto-refresh timer for key expiration
        function startExpirationTimer(expiresAt) {
            const expirationTime = new Date(expiresAt);
            
            function updateTimer() {
                const now = new Date();
                const timeLeft = expirationTime - now;
                
                if (timeLeft <= 0) {
                    // Key expired, reload page
                    window.location.reload();
                    return;
                }
                
                const hours = Math.floor(timeLeft / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                
                const timerElement = document.querySelector('.timer-countdown');
                if (timerElement) {
                    timerElement.textContent = `${hours}h ${minutes}m ${seconds}s remaining`;
                }
            }
            
            updateTimer();
            setInterval(updateTimer, 1000);
        }
        
        // Initialize timer if expiration data exists
        const expirationMeta = document.querySelector('meta[name="key-expires"]');
        if (expirationMeta) {
            startExpirationTimer(expirationMeta.content);
        }
        
        // Copy key to clipboard functionality
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success message
                const btn = event.target;
                const originalText = btn.textContent;
                btn.textContent = 'Copied!';
                btn.style.background = 'linear-gradient(135deg, #48bb78, #38a169)';
                
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.style.background = '';
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy: ', err);
                alert('Failed to copy key to clipboard');
            });
        }
    </script>
