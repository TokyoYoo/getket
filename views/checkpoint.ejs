<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <!-- Progress Bar -->
        <div class="card mb-4">
            <div class="card-body">
                <h6 class="text-white-custom mb-3">
                    <i class="fas fa-route me-2"></i>Progress
                </h6>
                <div class="progress mb-2">
                    <div class="progress-bar" 
                         style="width: <%= Math.round(((session?.completed?.length || 0) / 3) * 100) %>%">
                    </div>
                </div>
                <div class="d-flex justify-content-between small text-white-custom">
                    <span>
                        <i class="fas fa-play-circle <%= session?.completed?.includes(1) ? 'text-success' : '' %>"></i>
                        Checkpoint 1
                    </span>
                    <span>
                        <i class="fas fa-flag <%= session?.completed?.includes(2) ? 'text-success' : '' %>"></i>
                        Checkpoint 2
                    </span>
                    <span>
                        <i class="fas fa-key <%= (session?.completed?.includes(1) && session?.completed?.includes(2)) ? 'text-success' : '' %>"></i>
                        Access Key
                    </span>
                </div>
            </div>
        </div>

        <!-- Main Checkpoint Card -->
        <div class="card position-relative">
            <!-- Checkpoint Badge -->
            <div class="checkpoint-badge <%= isCompleted ? 'completed-badge' : '' %>">
                <%= checkpointNumber %>
            </div>
            
            <div class="card-header text-center">
                <h3 class="text-white-custom mb-0">
                    <i class="fas fa-<%= checkpointNumber === 1 ? 'flag-checkered' : (checkpointNumber === 2 ? 'flag' : 'key') %> me-2"></i>
                    <%= title %>
                </h3>
            </div>
            
            <div class="card-body text-center">
                <% if (isCompleted) { %>
                    <!-- Completed State -->
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        <h4 class="text-success mt-3">Completed!</h4>
                        <p class="text-white-custom">
                            You have successfully completed this checkpoint.
                        </p>
                    </div>
                    
                    <% if (checkpointNumber < 3) { %>
                        <a href="/checkpoint/<%= checkpointNumber + 1 %>" class="btn btn-success btn-lg">
                            <i class="fas fa-arrow-right me-2"></i>
                            Continue to Next Checkpoint
                        </a>
                    <% } else { %>
                        <a href="/access" class="btn btn-success btn-lg">
                            <i class="fas fa-unlock me-2"></i>
                            Access Your Key
                        </a>
                    <% } %>
                    
                <% } else { %>
                    <!-- Pending State -->
                    <div class="mb-4">
                        <i class="fas fa-hourglass-half text-warning" style="font-size: 4rem;"></i>
                        <h4 class="text-white-custom mt-3"><%= description %></h4>
                        
                        <% if (checkpointNumber === 1) { %>
                            <p class="text-white-custom mb-4">
                                Click the button below to complete a short task and unlock the next checkpoint.
                                This process helps us verify genuine users and maintain system security.
                            </p>
                        <% } else if (checkpointNumber === 2) { %>
                            <p class="text-white-custom mb-4">
                                Complete the second verification step to proceed to the final stage.
                                You're almost there! Just one more step to access your key.
                            </p>
                        <% } %>
                    </div>
                    
                    <!-- Action Button -->
                    <div class="d-grid gap-2">
                        <a href="<%= nextUrl %>" 
                           class="btn btn-primary btn-lg checkpoint-action-btn"
                           id="checkpointBtn<%= checkpointNumber %>">
                            <i class="fas fa-play me-2"></i>
                            Complete Checkpoint <%= checkpointNumber %>
                        </a>
                        
                        <small class="text-white-custom mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            You will be redirected to complete a verification task
                        </small>
                    </div>
                <% } %>
                
                <!-- Session Information -->
                <div class="mt-4 pt-3" style="border-top: 1px solid rgba(255, 255, 255, 0.2);">
                    <h6 class="text-white-custom mb-3">
                        <i class="fas fa-info-circle me-2"></i>Session Information
                    </h6>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="text-white-custom">
                                <i class="fas fa-clock d-block mb-1" style="font-size: 1.5rem;"></i>
                                <small>Started</small>
                                <div class="fw-bold">
                                    <%= new Date(session?.startTime || new Date()).toLocaleTimeString() %>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-white-custom">
                                <i class="fas fa-check-double d-block mb-1" style="font-size: 1.5rem;"></i>
                                <small>Completed</small>
                                <div class="fw-bold">
                                    <%= session?.completed?.length || 0 %>/2
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-white-custom">
                                <i class="fas fa-map-marker-alt d-block mb-1" style="font-size: 1.5rem;"></i>
                                <small>Current</small>
                                <div class="fw-bold">
                                    Step <%= checkpointNumber %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Help Card -->
        <div class="card mt-4">
            <div class="card-body">
                <h6 class="text-white-custom mb-3">
                    <i class="fas fa-question-circle me-2"></i>Need Help?
                </h6>
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <small class="text-white-custom">
                            <i class="fas fa-shield-alt me-1"></i>
                            <strong>Safe & Secure:</strong> All verifications are safe and help prevent abuse.
                        </small>
                    </div>
                    <div class="col-md-6 mb-2">
                        <small class="text-white-custom">
                            <i class="fas fa-clock me-1"></i>
                            <strong>Session Valid:</strong> Your progress is saved for 24 hours.
                        </small>
                    </div>
                    <div class="col-md-6 mb-2">
                        <small class="text-white-custom">
                            <i class="fas fa-redo me-1"></i>
                            <strong>Can Restart:</strong> You can restart the process anytime if needed.
                        </small>
                    </div>
                    <div class="col-md-6 mb-2">
                        <small class="text-white-custom">
                            <i class="fas fa-mobile-alt me-1"></i>
                            <strong>Mobile Friendly:</strong> Works perfectly on all devices.
                        </small>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <a href="/checkpoint/reset" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-refresh me-1"></i>Reset Progress
                    </a>
                    <button class="btn btn-sm btn-outline-light ms-2" onclick="checkStatus()">
                        <i class="fas fa-sync me-1"></i>Check Status
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const checkpointBtn = document.getElementById('checkpointBtn<%= checkpointNumber %>');
    
    if (checkpointBtn) {
        checkpointBtn.addEventListener('click', function(e) {
            const originalText = this.innerHTML;
            showLoading(this);
            
            // The Linkvertise script will handle the redirect
            // We just show loading state for better UX
            setTimeout(() => {
                hideLoading(this, originalText);
            }, 3000);
        });
    }
});

function checkStatus() {
    const btn = event.target;
    const originalText = btn.innerHTML;
    showLoading(btn);
    
    fetch('/checkpoint/status')
        .then(response => response.json())
        .then(data => {
            hideLoading(btn, originalText);
            
            if (data.canAccess) {
                let message = 'Current Status:<br>';
                message += `• Checkpoint 1: ${data.canAccess.checkpoint1 ? '✅ Available' : '❌ Locked'}<br>`;
                message += `• Checkpoint 2: ${data.canAccess.checkpoint2 ? '✅ Available' : '❌ Locked'}<br>`;
                message += `• Access Key: ${data.canAccess.access ? '✅ Available' : '❌ Locked'}<br>`;
                message += `• Completed: ${data.completed.length}/2 checkpoints`;
                
                showAlert(message, 'info');
            }
        })
        .catch(error => {
            hideLoading(btn, originalText);
            showAlert('Failed to check status', 'danger');
        });
}

// Auto-refresh status every 30 seconds when on checkpoint page
setInterval(() => {
    if (!document.hidden) {
        fetch('/checkpoint/status')
            .then(response => response.json())
            .then(data => {
                // If user completed current checkpoint, redirect appropriately
                if (data.completed.includes(<%= checkpointNumber %>)) {
                    const currentPath = window.location.pathname;
                    if (currentPath.includes('/checkpoint/1') && data.completed.includes(1)) {
                        window.location.href = '/checkpoint/2';
                    } else if (currentPath.includes('/checkpoint/2') && data.completed.includes(2)) {
                        window.location.href = '/access';
                    }
                }
            })
            .catch(() => {
                // Silently fail - don't interrupt user experience
            });
    }
}, 30000);
</script>