<script>
function cleanupExpiredKeys() {
    if (confirm('This will permanently delete all expired keys. Continue?')) {
        fetch('/dashboard/keys/bulk', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                action: 'cleanup_expired',
                keyIds: []
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(`Cleaned up ${data.affected} expired keys`);
            } else {
                alert('Cleanup failed: ' + data.error);
            }
        });
    }
}

function exportKeys() {
    window.open('/dashboard/api/export', '_blank');
}

function viewLogs() {
    alert('Log viewing feature coming soon');
}

// Update uptime
function updateUptime() {
    fetch('/dashboard/api/stats')
        .then(response => response.json())
        .then(data => {
            if (data.uptime) {
                document.getElementById('uptime').textContent = data.uptime;
            }
        });
}

setInterval(updateUptime, 30000);
updateUptime();
