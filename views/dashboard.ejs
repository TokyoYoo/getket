                <% if (topIPs && topIPs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>IP Address</th>
                                    <th>Key Count</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% const totalKeys = topIPs.reduce((sum, ip) => sum + ip.count, 0); %>
                                <% topIPs.forEach(ip => { %>
                                    <tr>
                                        <td><%= ip._id %></td>
                                        <td><%= ip.count %></td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" style="width: <%= (ip.count / totalKeys * 100).toFixed(1) %>%">
                                                    <%= (ip.count / totalKeys * 100).toFixed(1) %>%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">No data available.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
// Daily chart data
const dailyData = <%- JSON.stringify(dailyStats) %>;
const statusData = <%- JSON.stringify(statusStats) %>;

// Process daily data
const labels = [];
const data = [];
const last30Days = [];

// Generate last 30 days
for (let i = 29; i >= 0; i--) {
    const date = new Date();
    date.setDate(date.getDate() - i);
    last30Days.push({
        year: date.getFullYear(),
        month: date.getMonth() + 1,
        day: date.getDate(),
        dateStr: date.toLocaleDateString()
    });
}

last30Days.forEach(day => {
    labels.push(day.dateStr);
    const found = dailyData.find(d => 
        d._id.year === day.year && 
        d._id.month === day.month && 
        d._id.day === day.day
    );
    data.push(found ? found.count : 0);
});

// Create charts when page loads
document.addEventListener('DOMContentLoaded', function() {
    // Daily chart
    const dailyCtx = document.getElementById('dailyChart').getContext('2d');
    new Chart(dailyCtx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Keys Generated',
                data: data,
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Status chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: statusData.map(s => s._id.charAt(0).toUpperCase() + s._id.slice(1)),
            datasets: [{
                data: statusData.map(s => s.count),
                backgroundColor: [
                    '#28a745', // active - green
                    '#ffc107', // expired - yellow
                    '#6c757d'  // revoked - gray
                ]
            }]
        },
        options: {
            responsive: true
        }
    });
});
</script>

