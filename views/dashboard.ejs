<!-- Recent Keys Table -->
<div class="card">
    <div class="card-header">
        <h5><i class="fas fa-list"></i> Recent Keys</h5>
    </div>
    <div class="card-body">
        <% if (recentKeys && recentKeys.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Key Value</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Expires</th>
                            <th>IP Address</th>
                            <th>Session ID</th>
                            <th>Access Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% keys.forEach(key => { %>
                            <tr>
                                <td><input type="checkbox" class="key-checkbox" value="<%= key._id %>"></td>
                                <td><code><%= key.keyValue %></code></td>
                                <td>
                                    <span class="badge bg-<%= key.status === 'active' ? 'success' : key.status === 'expired' ? 'warning' : 'secondary' %>">
                                        <%= key.status %>
                                    </span>
                                </td>
                                <td><%= new Date(key.createdAt).toLocaleString() %></td>
                                <td><%= new Date(key.expiresAt).toLocaleString() %></td>
                                <td><%= key.ipAddress %></td>
                                <td><code><%= key.sessionId.substring(0, 8) %>...</code></td>
                                <td><%= key.accessCount || 0 %></td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="revokeKey('<%= key._id %>')">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteKey('<%= key._id %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (pagination && pagination.total > 1) { %>
                <nav>
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.current - 1 %>&status=<%= filters.status || '' %>&search=<%= filters.search || '' %>">Previous</a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                            <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&status=<%= filters.status || '' %>&search=<%= filters.search || '' %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.current + 1 %>&status=<%= filters.status || '' %>&search=<%= filters.search || '' %>">Next</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <p class="text-muted">No keys found matching your criteria.</p>
        <% } %>
    </div>
</div>

